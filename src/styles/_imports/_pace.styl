// Import Stylus plugins
@import 'jeet'
@import 'nib'
@import 'rupture'
@import '_colors.styl'

.pace
	-webkit-pointer-events none
	pointer-events none
	-webkit-user-select none
	-moz-user-select none
	user-select none
	opacity 1
	transition 250ms
	
	.pace-progress
		background white
		position fixed
		z-index 5000
		top 0
		right 100%
		width 100%
		height 2px
		opacity 1
		transition 250ms

.pace-inactive
	opacity 0
	visibility hidden